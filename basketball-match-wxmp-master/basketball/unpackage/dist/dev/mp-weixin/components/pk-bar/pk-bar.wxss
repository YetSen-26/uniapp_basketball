.pk-detail-con {
  position: relative;
  margin: 0 auto 0;
}
.progress {
  width: 100%;
  height: 30rpx;
  overflow: hidden;
  border-radius: 20rpx;
  background-color: #3B59E1;
}
.progress-bar {
  position: relative;
  height: 30rpx;
  text-align: left;
  background-color: #E82D33;
}
.progress,
.progress-bar {
  position: relative;
}
.lightning {
  display: none;
  position: absolute;
  top: -40rpx;
  z-index: 9;
  width: 70rpx;
  height: 140rpx;
  float: right;
  margin-right: -12rpx;
  background: url(data:image/png;base64,) no-repeat center;
  background-size: cover;
  -webkit-transform: translateX(-20rpx);
          transform: translateX(-20rpx);
}
.acimgs {
  position: absolute;
  bottom: 0;
  width: 58rpx;
  height: 30rpx;
  z-index: 9;
  background-color: #3B59E1;
  -webkit-clip-path: polygon(0 0, 70% 0, 25% 100%, 0% 100%);
          clip-path: polygon(0 0, 70% 0, 25% 100%, 0% 100%);
  -webkit-transform: translateX(-10rpx);
          transform: translateX(-10rpx);
}
.team-name {
  position: absolute;
  top: 0;
  line-height: 30rpx;
  color: #f3eee1;
  letter-spacing: 1rpx;
  font-size: 24rpx;
}
.team-l {
  left: 23rpx;
}
.team-r {
  right: 23rpx;
}

