.yh-btn {
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 60rpx !important;
  background-color: #E92933;
  color: #fff;
}
radio {
  -webkit-transform: scale(0.6);
  transform: scale(0.6);
}
.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFF;
  text-align: center;
}
.yh-info {
  width: 630rpx;
  margin-left: 60rpx;
  border-top: 1px solid #E7E9EF;
  margin-top: 70rpx;
  padding-top: 30rpx;
}
.yh-info .main {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}
.yh-info .explain {
  color: #949AA0;
}
.yh-info text {
  font-size: 66rpx;
  position: relative;
  top: -4rpx;
  margin-right: 6rpx;
}
.login {
  display: block;
  margin: 100rpx auto 30rpx auto;
}
.yh-btn {
  box-shadow: 0 0 0 0 !important;
}
.yh-login-line {
  width: 590rpx;
  margin: 0 auto;
}
.yh-login-line .remarks {
  font-size: 28rpx;
}
.yh-login-line .title {
  color: #3681C4;
  font-size: 44rpx;
}
.yh-login-line .form {
  margin-top: 100rpx;
}
.yh-login-line .yh-form-item {
  width: 100%;
  height: 88rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #C7C7C7;
}
.yh-login-line .yh-form-item image {
  position: absolute;
  top: 30rpx;
  left: 0;
}
.yh-login-line .yh-form-item .yh-input {
  padding-left: 36rpx;
  width: 400rpx;
  height: 88rpx;
}
.yh-login-line .yh-form-item .yh-code {
  color: #3681C4;
  line-height: 88rpx;
}

