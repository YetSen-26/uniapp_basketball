.mx-tr {
  width: 900rpx;
}
.mx-table {
  overflow-x: auto;
}
.mx-btn {
  width: 400rpx;
  height: 80rpx;
  display: block;
  margin: 50rpx auto 0 auto;
}
.mx-input {
  border: 1px solid red;
  height: 80rpx;
  width: 500rpx;
  padding-left: 30rpx;
  margin-left: 25rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
}
.center-pop {
  background-color: #ffffff;
  width: 550rpx;
  border-radius: 12rpx;
  padding: 30rpx 0;
}
.mx-th {
  color: #ffffff;
  padding: 6rpx 6rpx;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
}
.mx-td {
  padding-top: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mx-th:nth-child(1) {
  width: 200rpx;
}
.mx-th:nth-child(2) {
  width: 80rpx;
}
.mx-th:nth-child(3) {
  width: 100rpx;
}
.mx-th:nth-child(4) {
  width: 100rpx;
}
.mx-th:nth-child(5) {
  width: 100rpx;
}
.mx-th:nth-child(6) {
  width: 90rpx;
}
.mx-th:nth-child(7) {
  width: 90rpx;
}
.mx-th:nth-child(8) {
  width: 90rpx;
}
button {
  margin-left: 0;
  margin-right: 0;
}
.segmented-control__text {
  color: #818181 !important;
}
.segmented-control__item--text {
  color: #ffffff !important;
}
.mx-line {
  width: 686rpx;
  height: 355rpx;
  padding: 76rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}
.mx-line .img {
  position: relative;
  top: -40rpx;
}
.mx-line-center {
  padding: 30rpx 50rpx;
}

